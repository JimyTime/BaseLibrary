<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.gosuncn.sample.module.ui.activity.CircleImageViewActivity">

    <com.gosuncn.core.ui.widget.CircleImageView
        android:id="@+id/civ"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/ic_woo"
        android:layout_gravity="center_horizontal"
        app:border_width="@dimen/dp_1"
        app:border_color="@color/color_material_ffffff" />

    <RadioGroup
        android:id="@+id/rg_width"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="border_width: "/>

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
        <RadioButton
            android:id="@+id/rb_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"/>
        <RadioButton
            android:id="@+id/rb_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_color"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="border_color: "/>

        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="red"/>
        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="green"/>
        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blue"/>

    </RadioGroup>

</LinearLayout>
