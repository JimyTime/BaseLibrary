<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.gosuncn.sample.module.ui.activity.ResizeDrawableEditTextActivity">

    <com.gosuncn.core.ui.widget.ResizeDrawableEditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_woo"
        app:drawableSize="@dimen/dp_16"
        android:drawablePadding="@dimen/dp_16"
        android:hint="@string/resize_drawable_edit_text"/>

    <RadioGroup
        android:id="@+id/rg_size"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_48">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawableSize: "/>

        <RadioButton
            android:id="@+id/rb_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"/>
        <RadioButton
            android:id="@+id/rb_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"/>
        <RadioButton
            android:id="@+id/rb_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48"/>

    </RadioGroup>

</LinearLayout>
